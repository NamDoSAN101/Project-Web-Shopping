<%- include("../partials/header.ejs") %>

<div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% find.forEach(function(prints){ %>
        <div class="col" >
          <div class="card shadow-sm ">
            <img src="<%= prints.image %>" height="300px" class="index-image">
            <div class="card-body ">
              <p class="card-text">Item: <%= prints.name %></p>
              <p class="card-text">ref: <%= prints.Artist %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/prints/<%= prints._id %>" class="btn btn-sm text-white" style="background: #4895ef;" >View</a>
                  <a href="/prints/<%= prints._id %>/add-to-cart " class="btn btn-sm text-white" style="background: #4cc9f0;">Add to cart</a>
                </div>
                <small class="text-muted"><%= prints.price %> $</small>
              </div>
            </div>
            
          </div>
          
        </div>
        
        <% }); %>
        
      </div>
      <a href="/prints" class="btn btn-sm btn-primary">Back</a>
    </div>
  </div>

  
  <%- include("../partials/footer.ejs") %>