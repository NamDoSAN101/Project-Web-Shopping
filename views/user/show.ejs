<div class="py-4  container">
    <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <h1>My profile</h1>
                    <img src="<%= user.profileImage %>" alt="ProfileImage" class="rounded-circle" width="200">
                    <div class="mt-3">
                      <h4><%= user.firstName + ' ' + user.lastName %></h4>
                        <% if ((currentUser && currentUser.isAdmin)) { %>
                        <p class="text-secondary mb-1">
                            Admin user
                        </p>
                        <% } else { %> 
                        <p class="text-secondary mb-1">Guest user</p>
                        <% } %> 
                      <p class="text-muted font-size-sm">User of sGuy & Cloud</p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mt-3">
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <%= user.firstName + ' ' + user.lastName %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <p>
                            <a href="mailto: <%= user.email %>" > <%= user.email %> </a>
                        </p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Mobile</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <p><%= user.mobile %> </p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <p><%= user.address %> </p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info " target="__blank" href="/user/<%= user._id %>/edit ">Edit</a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row gutters-sm">
                <div class="col-sm-6 mb-3">
                  <ul>
                    <% prints.forEach(function(print) { %> 
                        <li><a href="/prints/<%= print.id %>"><%= print.name %> </a></li>
                    <% }); %> 
                  </ul>
                </div>
                <div class="col-sm-6 mb-3">
                  
                </div>
              </div>

            </div>
          </div>

        </div>
    </div>

<%- include("../partials/footer.ejs") %>