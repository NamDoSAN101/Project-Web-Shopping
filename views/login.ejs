<%- include("partials/header.ejs") %>

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-lg-3 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
          <div class="card rounded-3 text-black">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="card-body p-md-5 mx-md-4">
  
                  <div class="text-center">
                    <img src="/images/icon.png"
                      style="width: 150px;" alt="logo">
                    <h4 class=" mt-1 mb-5 pb-1 "><strong>sGuy & Cloud Shopping</strong></h4>
                  </div>
  
                  <form action="/login" method="POST">
                    <p>Please login to your account</p>
  
                    <div class="form-outline mb-0">
                      <input type="text" id="form2Example11" class="form-control"
                        placeholder="Username" name="username" />
                      <label class="form-label" for="form2Example11"></label>
                    </div>
  
                    <div class="form-outline mb-3">
                      <input type="password" id="form2Example22" class="form-control" 
                        placeholder="Password" name="password" />
                      <label class="form-label" for="form2Example22"></label>
                    </div>
  
                    <div class="text-center pt-1 mb-4 pb-1">
                      <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Login</button>
                    </div>
  
                    <div class="d-flex align-items-center justify-content-center pb-4">
                      <p class="mb-0 me-2">Don't have an account?</p>
                      <a href="register">
                        <button type="button" class="btn btn-outline-primary">Create new</button>
                      </a>
                    </div>
                    
                    <div class="d-flex align-items-center justify-content-center pb-4" >
                        <a href="/prints">
                            <button type="button" class="btn btn-outline-primary">Go Back</button>
                        </a>
                    </div>

                  </form>
  
                </div>
              </div>
              <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                  <h4 class="mb-4">Welcome to sGuy & Cloud Shopping</h4>
                  <p class="small mb-0">We have accessories that you want!.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

